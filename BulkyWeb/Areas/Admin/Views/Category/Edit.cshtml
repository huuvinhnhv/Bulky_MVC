@model Category

<form method="post">
    <div class="border border-secondary p-5 mt-4">
        <div class="mb-3 pb-2 row">
            <h2 class="text-primary">Edit Category</h2>
        </div>
        <input asp-for="Id" type="hidden" />
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 row">
            <label asp-for="Name" class="pb-2"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="DisplayOrder" class="pb-2"></label>
            <input asp-for="DisplayOrder"  class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-warning w-100">Edit</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-dark w-100">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}