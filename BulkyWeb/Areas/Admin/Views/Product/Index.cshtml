@{
}
@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Create New Product
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Product Title</th>
                @* <th>Description</th> *@
                <th>ISBN</th>
                @* <th>ListPrice</th> *@
                <th>Price</th>
                <th>Author</th>
@*                 <th>Price50</th>
                <th>Price100</th> *@
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Title</td>
                    @* <td>@c.Description</td> *@
                    <td>@c.ISBN</td>
                    @* <td>@c.ListPrice</td> *@
                    <td>@c.Price</td>
                    <td>@c.Author</td>
@*                     <td>@c.Price50</td>
                    <td>@c.Price100</td> *@
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@c.Id" class="btn btn-warning mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@c.Id" class="btn btn-danger  mx-2">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>